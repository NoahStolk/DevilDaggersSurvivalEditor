<Window x:Class="DevilDaggersSurvivalEditor.Gui.Windows.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="200" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
	<StackPanel x:Name="StackPanel">
		<TextBlock Style="{StaticResource ParagraphTextBlock}" Text="{Binding Message}" HorizontalAlignment="Center" />
		<Button Style="{StaticResource OKButton}" Name="OKButton" Click="OKButton_Click">OK</Button>
	</StackPanel>
</Window>