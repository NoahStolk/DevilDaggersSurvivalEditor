<local:AbstractSpawnsetUserControl x:Class="DevilDaggersSurvivalEditor.GUI.UserControls.SpawnsetArena"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:DevilDaggersSurvivalEditor.GUI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<Grid>
		<StackPanel Grid.Row="1">
			<Canvas Name="ArenaTiles" MouseMove="ArenaTiles_MouseMove" MouseWheel="ArenaTiles_MouseWheel" MouseLeftButtonDown="ArenaTiles_MouseLeftButtonDown" MouseRightButtonDown="ArenaTiles_MouseRightButtonDown" Background="Black" Width="408" Height="408">
				<Ellipse Stroke="Blue" Name="ShrinkStart" Panel.ZIndex="1" />
				<Ellipse Stroke="Red" Name="ShrinkEnd" Panel.ZIndex="1" />
				<Ellipse Stroke="Lime" Name="ShrinkCurrent" Panel.ZIndex="1" />
			</Canvas>
			<Grid Grid.Row="2">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="2*" />
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
				</Grid.ColumnDefinitions>
				<StackPanel Grid.Column="0">
					<Label Padding="4,0,0,0">Height map</Label>
					<Grid Margin="4,0,0,0" HorizontalAlignment="Left" Name="HeightMap" Width="128" Height="40" />
					<Label Padding="4,0,0,0">Shrink preview</Label>
					<Slider Margin="4,0,0,0" Name="ShrinkCurrentSlider" Minimum="0" Maximum="1200" ValueChanged="ShrinkCurrentSlider_ValueChanged" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0" />
					<Label Padding="4,0,0,0">Arena presets</Label>
					<ComboBox Name="ComboBoxArenaPreset" SelectedIndex="0" />
					<Button Click="ArenaPresetConfigureButton_Click">Configure</Button>
				</StackPanel>
				<StackPanel Grid.Column="1">
					<Label Padding="4,0,0,0">Tile</Label>
					<Label Padding="4,0,0,0">Height</Label>
				</StackPanel>
				<StackPanel Grid.Column="2">
					<Label Padding="4,0,0,0" Name="LabelTile">0,0</Label>
					<Label Padding="4,0,0,0" Name="HeightTile">0</Label>
				</StackPanel>
			</Grid>
		</StackPanel>
	</Grid>
</local:AbstractSpawnsetUserControl>
