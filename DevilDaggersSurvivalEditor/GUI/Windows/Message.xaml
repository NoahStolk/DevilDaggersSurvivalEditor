<Window x:Class="DevilDaggersSurvivalEditor.GUI.Windows.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="" Height="200" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
	<Grid x:Name="Grid">
		<StackPanel>
			<TextBlock TextWrapping="WrapWithOverflow" Text="{Binding Message}"></TextBlock>
			<Button Name="OKButton" Content="OK" Click="OKButton_Click"/>
		</StackPanel>
	</Grid>
</Window>