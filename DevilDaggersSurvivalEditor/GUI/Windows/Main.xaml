<Window x:Class="DevilDaggersSurvivalEditor.GUI.Windows.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:usercontrols="clr-namespace:DevilDaggersSurvivalEditor.GUI.UserControls"
		mc:Ignorable="d"
        Title="Devil Daggers Survival Editor" MinHeight="768" MinWidth="1366" WindowStartupLocation="CenterScreen">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="18"/>
			<RowDefinition Height="1*"/>
		</Grid.RowDefinitions>
		<DockPanel Grid.Row="0">
			<usercontrols:MenuBar/>
		</DockPanel>
		<Grid Grid.Row="1" Height="768" Width="1366" Background="#eee">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1*"/>
				<ColumnDefinition Width="4*"/>
				<ColumnDefinition Width="3*"/>
			</Grid.ColumnDefinitions>
			<StackPanel Grid.Column="0" x:Name="SpawnsetSettings">
				<Label FontSize="20" Margin="0,0,0,20">Settings</Label>
				<usercontrols:SpawnsetSettings/>
			</StackPanel>
			<StackPanel Grid.Column="1">
				<Label FontSize="20" Margin="0,0,0,20">Spawns</Label>
				<usercontrols:SpawnsetSpawns/>
			</StackPanel>
			<StackPanel Grid.Column="2">
				<Label FontSize="20" Margin="0,0,0,20">Arena</Label>
				<usercontrols:SpawnsetArena/>
			</StackPanel>
		</Grid>
	</Grid>
</Window>