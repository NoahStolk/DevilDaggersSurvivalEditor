<Window x:Class="DevilDaggersSurvivalEditor.GUI.Windows.ModifySpawnDelayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d"
        Title="Modify spawn delay" Height="256" Width="256" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
	<StackPanel x:Name="Data">
		<TextBlock Name="SpawnsLabel" />
		<ComboBox Name="FunctionComboBox" SelectedIndex="{Binding Function}">
			<ComboBoxItem>+</ComboBoxItem>
			<ComboBoxItem>-</ComboBoxItem>
			<ComboBoxItem>*</ComboBoxItem>
			<ComboBoxItem>/</ComboBoxItem>
		</ComboBox>
		<TextBox Name="ValueTextBox" Text="{Binding Value}" />
		<Button Name="ApplyButton" Click="ApplyButton_Click" Content="Apply" />
	</StackPanel>
</Window>