<Window x:Class="DevilDaggersSurvivalEditor.GUI.Windows.ConfirmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="200" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
	<StackPanel>
		<TextBlock Name="Question" Style="{StaticResource ParagraphTextBlock}" HorizontalAlignment="Center" />
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>
			<Button Grid.Column="0" Name="YesButton" Click="YesButton_Click" IsDefault="True">Yes</Button>
			<Button Grid.Column="1" Name="NoButton" Click="NoButton_Click">No</Button>
		</Grid>
	</StackPanel>
</Window>