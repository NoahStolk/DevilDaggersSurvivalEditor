<Window x:Class="DevilDaggersSurvivalEditor.GUI.Windows.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="" Height="450" Width="600" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
	<Grid x:Name="Error">
		<StackPanel>
			<TextBlock Text="{Binding ErrorMessage}" TextWrapping="WrapWithOverflow"></TextBlock>
			<StackPanel x:Name="ExceptionStackPanel" Visibility="Hidden">
				<Label>Technical information</Label>
				<TextBlock Text="{Binding Message}" TextWrapping="WrapWithOverflow"></TextBlock>
			</StackPanel>
			<Button Name="OKButton" Content="OK" Click="OKButton_Click"/>
		</StackPanel>
	</Grid>
</Window>