<Window x:Class="DevilDaggersSurvivalEditor.GUI.Windows.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="256" Width="512" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
	<StackPanel x:Name="Error">
		<TextBox Style="{StaticResource ParagraphTextBox}" Text="{Binding ErrorMessage, Mode=OneTime}" IsReadOnly="True" />
		<StackPanel x:Name="ExceptionStackPanel" Visibility="Hidden">
			<Label Margin="6,6,0,6" FontWeight="Bold">Technical information</Label>
			<TextBox Style="{StaticResource ParagraphTextBox}" Text="{Binding Message, Mode=OneTime}" TextWrapping="WrapWithOverflow" IsReadOnly="True" />
		</StackPanel>
		<Button Style="{StaticResource OKButton}" Name="OKButton" Click="OKButton_Click">OK</Button>
	</StackPanel>
</Window>