<Window x:Class="DevilDaggersSurvivalEditor.GUI.Windows.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="" Height="450" Width="600" ResizeMode="NoResize" Background="Black" WindowStartupLocation="CenterScreen">
	<Grid>
		<StackPanel x:Name="Error" Margin="10">
			<Label FontSize="20" Content="{Binding ErrorMessage}"></Label>
			<StackPanel x:Name="ExceptionStackPanel" Visibility="Hidden">
				<Label FontSize="24">Technical information</Label>
				<Label Content="{Binding Message}"></Label>
			</StackPanel>
			<Button Margin="10" Name="OKButton" Content="OK" Click="OKButton_Click"/>
		</StackPanel>
	</Grid>
</Window>