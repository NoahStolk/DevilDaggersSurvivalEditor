<Window x:Class="DevilDaggersSurvivalEditor.GUI.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Settings" Height="256" Width="512" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition Width="2*"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<StackPanel Grid.Column="0">
			<Label>DD Location</Label>
		</StackPanel>
		<StackPanel Grid.Column="1">
			<TextBlock TextWrapping="WrapWithOverflow" Name="LabelDDLocation"></TextBlock>
		</StackPanel>
		<StackPanel Grid.Column="2">
			<Button Content="Browse" Click="BrowseButton_Click" />
			<Button Content="Apply" Click="ApplyButton_Click"/>
		</StackPanel>
	</Grid>
</Window>